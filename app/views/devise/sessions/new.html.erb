<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="<%= asset_path('favicon-32x32.png') %>" type="image/png" />
  <link href="<%= asset_path('plugins/simplebar/css/simplebar.css') %>" rel="stylesheet" />
  <link href="<%= asset_path('plugins/perfect-scrollbar/css/perfect-scrollbar.css') %>" rel="stylesheet" />
  <link href="<%= asset_path('plugins/metismenu/css/metisMenu.min.css') %>" rel="stylesheet" />
  <link href="<%= asset_path('css/pace.min.css') %>" rel="stylesheet" />
  <script src="<%= asset_path('js/pace.min.js') %>"></script>
  <link href="<%= asset_path('css/bootstrap.min.css') %>" rel="stylesheet">
  <link href="<%= asset_path('css/bootstrap-extended.css') %>" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
  <link href="<%= asset_path('css/app.css') %>" rel="stylesheet">
  <link href="<%= asset_path('css/icons.css') %>" rel="stylesheet">
  <title>Rocker - Bootstrap 5 Admin Dashboard Template</title>
</head>
<body>
  <div class="wrapper">
    <div class="section-authentication-signin d-flex align-items-center justify-content-center my-5 my-lg-0">
      <div class="container">
        <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-3">
          <div class="col mx-auto">
            <div class="card mb-0">
              <div class="card-body">
                <div class="p-4">
                  <div class="mb-3 text-center">
                    <%= image_tag 'logo-icon.png', width: 60, alt: "" %>
                  </div>
                  <div class="text-center mb-4">
                    <h5 class="">DevBatista</h5>
                    <p class="mb-0"><%= t('devise.sessions.new.log_in') %></p>
                  </div>
                  <div class="form-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {
                                                                                                 class: "row g-3" 
                                                                                                }) do |f| %>
                      <div class="col-12">
                        <%= f.label :email, t('devise.sessions.new.email'), class: "form-label" %>
                        <%= f.email_field :email, 
                                          autofocus: true, 
                                          autocomplete: "email", 
                                          class: "form-control", 
                                          placeholder: t('devise.sessions.new.example_email') %>
                      </div>
                      <div class="col-12">
                        <%= f.label :password, t('devise.sessions.new.password'), class: "form-label" %>
                        <div class="input-group" id="show_hide_password">
                          <%= f.password_field :password, 
                                                autocomplete: "current-password", 
                                                class: "form-control border-end-0", 
                                                placeholder: t('devise.sessions.new.enter_password') %>
                          <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
                        </div>
                      </div>
                      <% if devise_mapping.rememberable? %>
                        <div class="col-md-6">
                          <div class="form-check form-switch">
                            <%= f.check_box :remember_me, class: "form-check-input", id: "flexSwitchCheckChecked" %>
                            <%= f.label :remember_me, "Remember Me", class: "form-check-label", for: "flexSwitchCheckChecked" %>
                          </div>
                        </div>
                      <% end %>
                      <div class="col-md-6 text-end">
                        <%= link_to "Forgot Password ?", new_password_path(resource_name) %>
                      </div>
                      <div class="col-12">
                        <div class="d-grid">
                          <%= f.submit "Sign in", class: "btn btn-primary" %>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="text-center ">
                          <p class="mb-0">Don't have an account yet? <%= link_to "Sign up here", new_registration_path(resource_name) %></p>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!--end row-->
      </div>
    </div>
  </div>
  <script src="<%= asset_path('js/bootstrap.bundle.min.js') %>"></script>
  <script src="<%= asset_path('js/jquery.min.js') %>"></script>
  <script src="<%= asset_path('plugins/simplebar/js/simplebar.min.js') %>"></script>
  <script src="<%= asset_path('plugins/metismenu/js/metisMenu.min.js') %>"></script>
  <script src="<%= asset_path('plugins/perfect-scrollbar/js/perfect-scrollbar.js') %>"></script>
  <script>
    $(document).ready(function () {
      $("#show_hide_password a").on('click', function (event) {
        event.preventDefault();
        if ($('#show_hide_password input').attr("type") == "text") {
          $('#show_hide_password input').attr('type', 'password');
          $('#show_hide_password i').addClass("bx-hide");
          $('#show_hide_password i').removeClass("bx-show");
        } else if ($('#show_hide_password input').attr("type") == "password") {
          $('#show_hide_password input').attr('type', 'text');
          $('#show_hide_password i').removeClass("bx-hide");
          $('#show_hide_password i').addClass("bx-show");
        }
      });
    });
  </script>
  <script src="<%= asset_path('js/app.js') %>"></script>
</body>
</html>